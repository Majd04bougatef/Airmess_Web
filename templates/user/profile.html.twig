{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>{% if user.roleUser == 'Entreprise' %}Business{% else %}User{% endif %} Profile</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <img src="{{ user.photoUrl }}" alt="Profile Photo" class="img-fluid rounded-circle mb-3" style="max-width: 150px; max-height: 150px;">
                                </div>
                            </div>
                            <div class="col-md-8">
                                {% if user.roleUser == 'Entreprise' %}
                                    <h4>{{ user.name }}</h4>
                                    <p><strong>Contact Person:</strong> {{ user.prenom }}</p>
                                    <p><strong>Business Email:</strong> {{ user.email }}</p>
                                    <p><strong>Business Phone:</strong> {{ user.phoneNumber }}</p>
                                    <p><strong>Business Type:</strong> {{ user.businessType|default('Not specified') }}</p>
                                    <p><strong>Founded:</strong> {{ user.dateNaiss ? user.dateNaiss|date('d/m/Y') : 'N/A' }}</p>
                                    
                                    {% if user.companyDescription %}
                                        <div class="mt-3">
                                            <h5>About the Company</h5>
                                            <p class="text-muted">{{ user.companyDescription }}</p>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <h4>{{ user.prenom }} {{ user.name }}</h4>
                                    <p><strong>Email:</strong> {{ user.email }}</p>
                                    <p><strong>Phone:</strong> {{ user.phoneNumber }}</p>
                                    <p><strong>Role:</strong> {{ user.roleUser }}</p>
                                    <p><strong>Birth Date:</strong> {{ user.dateNaiss ? user.dateNaiss|date('d/m/Y') : 'N/A' }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 