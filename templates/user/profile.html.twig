{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>User Profile</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <img src="{{ user.photoUrl }}" alt="Profile Photo" class="img-fluid rounded-circle mb-3" style="max-width: 150px; max-height: 150px;">
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h4>{{ user.prenom }} {{ user.name }}</h4>
                                <p><strong>Email:</strong> {{ user.email }}</p>
                                <p><strong>Phone:</strong> {{ user.phoneNumber }}</p>
                                <p><strong>Role:</strong> {{ user.roleUser }}</p>
                                <p><strong>Birth Date:</strong> {{ user.dateNaiss ? user.dateNaiss|date('d/m/Y') : 'N/A' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 