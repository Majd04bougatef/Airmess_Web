{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_U</th>
                <th>Name</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Password</th>
                <th>RoleUser</th>
                <th>DateNaiss</th>
                <th>PhoneNumber</th>
                <th>Statut</th>
                <th>Diamond</th>
                <th>DeleteFlag</th>
                <th>ImagesU</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idU }}</td>
                <td>{{ user.name is defined ? user.name : 'N/A' }}</td>
                <td>{{ user.prenom is defined ? user.prenom : 'N/A' }}</td>
                <td>{{ user.email is defined ? user.email : 'N/A' }}</td>
                <td>{{ user.password is defined ? user.password : 'N/A' }}</td>
                <td>{{ user.roleUser is defined ? user.roleUser : 'N/A' }}</td>
                <td>{{ user.dateNaiss is defined and user.dateNaiss ? user.dateNaiss|date('Y-m-d') : 'N/A' }}</td>
                <td>{{ user.phoneNumber is defined ? user.phoneNumber : 'N/A' }}</td>
                <td>{{ user.statut is defined ? user.statut : 'N/A' }}</td>
                <td>{{ user.diamond is defined ? user.diamond : 'N/A' }}</td>
                <td>{{ user.deleteFlag is defined ? user.deleteFlag : 'N/A' }}</td>
                <td>{{ user.imagesU is defined ? user.imagesU : 'N/A' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id_U': user.idU}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id_U': user.idU}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
