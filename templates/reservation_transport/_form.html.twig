<style>

.contact-form{
    background: #fff;
    margin-top: 5%;
    margin-bottom: 5%;
    width: 80%;
    border-radius:20px;
}
.contact-form .form-control{
    border-radius:1rem;
}
.contact-image{
    text-align: center;
}
.contact-image img{
    width: 11%;
    margin-top: -3%;
}
.contact-form form{
    padding: 14%;
}
.contact-form form .row{
    margin-bottom: -7%;
}
.contact-form h3{
    margin-top: 3%;
    text-align: center;
    color: #0062cc;
}
.contact-form .btnContact {
    width: 50%;
    border: none;
    border-radius: 1rem;
    padding: 1.5%;
    background: #dc3545;
    font-weight: 600;
    color: #fff;
    cursor: pointer;
}
.btnn
{
    width: 100%;
    border-radius: 1rem;
    padding: 1.5%;
    color: #fff;
    background-color: #0062cc;
    border: none;
    cursor: pointer;
}
</style>
<div class="container contact-form">
    <div class="contact-image">
        <img src="{{asset('images/signalisation (2).png')}}" alt="rocket_contact"/>
    </div>
    <h3>Réserver Votre vélo</h3>
    {{ form_start(form, {'method': 'POST', 'action': path('app_reservation_transport_new')}) }}
    <div class="row">
    <!-- Affichage du prix en texte -->
            <div class="form-group">
                <label>Prix :</label>
            </div>


        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.dateRes, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.nombreVelo, {'attr': {'class': 'form-control'}}) }}
            </div>
        
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.dateFin, {'attr': {'class': 'form-control'}}) }}
            </div>
            
             
        </div>
        <div class="form-group">
                <button class="btnn">{{ button_label|default('Save') }}</button>
            </div>
    </div>
    {{ form_end(form) }}
</div>


