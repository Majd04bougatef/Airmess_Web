{% extends 'base.html.twig' %}

{% block title %}User Diagnostic{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="h4 mb-0">User Diagnostic</h1>
        </div>
        <div class="card-body">
            <h2 class="h5 mb-3">Users in Database ({{ users|length }})</h2>
            
            {% if users|length > 0 %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Password Hash (first 20 chars)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.idU }}</td>
                                <td>{{ user.name }} {{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roleUser }}</td>
                                <td>{{ user.password[:20] }}...</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-warning">
                    No users found in the database.
                </div>
            {% endif %}
            
            <div class="mt-4">
                <a href="{{ path('login') }}" class="btn btn-primary">Go to Login</a>
                <a href="{{ path('app_create_admins') }}" class="btn btn-success">Create Admin Accounts</a>
            </div>
        </div>
    </div>
</div>
{% endblock %} 