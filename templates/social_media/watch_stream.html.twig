{% extends 'dashVoyageurs/dashboardVoyageurs.html.twig' %}

{% block title %}{{ stream.new_asset_settings.title|default('Live Stream') }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .stream-container {
        padding: 2rem;
    }
    
    .stream-player {
        width: 100%;
        aspect-ratio: 16/9;
        background: #000;
        border-radius: 15px;
        overflow: hidden;
        margin-bottom: 2rem;
    }
    
    .stream-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 2rem;
    }
    
    .stream-info {
        flex: 1;
    }
    
    .stream-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #344767;
        margin-bottom: 1rem;
    }
    
    .stream-status {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .status-active {
        background-color: #2dce89;
        color: white;
    }
    
    .status-idle {
        background-color: #fb6340;
        color: white;
    }
    
    .status-connected {
        background-color: #11cdef;
        color: white;
    }
    
    .streamer-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .streamer-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
    }
    
    .streamer-details {
        display: flex;
        flex-direction: column;
    }
    
    .streamer-name {
        font-weight: 600;
        color: #344767;
    }
    
    .stream-stats {
        color: #67748e;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .live-badge {
        background: #f00;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-weight: bold;
        animation: pulse 2s infinite;
    }
    
    .stream-actions {
        display: flex;
        gap: 1rem;
    }
    
    .action-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        border: none;
    }
    
    .btn-follow {
        background: #5e72e4;
        color: white;
    }
    
    .btn-follow:hover {
        background: #324cdd;
        transform: translateY(-2px);
    }
    
    .chat-container {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        height: calc(100vh - 300px);
        display: flex;
        flex-direction: column;
    }
    
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
    }
    
    .chat-input {
        padding: 1rem;
        border-top: 1px solid #e9ecef;
        display: flex;
        gap: 1rem;
    }
    
    .chat-input input {
        flex: 1;
        padding: 0.75rem;
        border: 1px solid #e9ecef;
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .chat-input input:focus {
        border-color: #5e72e4;
        box-shadow: 0 0 0 3px rgba(94, 114, 228, 0.1);
        outline: none;
    }
    
    .chat-input button {
        padding: 0.75rem 1.5rem;
        background: #5e72e4;
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .chat-input button:hover {
        background: #324cdd;
    }
    
    .chat-message {
        margin-bottom: 1rem;
    }
    
    .message-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.25rem;
    }
    
    .message-username {
        font-weight: 600;
        color: #344767;
    }
    
    .message-time {
        color: #67748e;
        font-size: 0.75rem;
    }
    
    .message-content {
        color: #67748e;
    }
    
    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="stream-container">
                        {# Afficher les messages flash #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="stream-header">
                            <div class="stream-info">
                                <h1 class="stream-title">{{ stream.new_asset_settings.title|default('Live Stream') }}</h1>
                                <div class="stream-status status-{{ stream.status }}">
                                    {{ stream.status|title }}
                                </div>
                            </div>
                            <div class="stream-actions">
                                <a href="{{ path('app_social_media_live_list') }}" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour aux streams
                                </a>
                            </div>
                        </div>

                        <div class="stream-player">
                            <mux-player
                                stream-type="live"
                                playback-id="{{ stream.playback_ids[0].id }}"
                                metadata-video-title="{{ stream.new_asset_settings.title|default('Live Stream') }}"
                                style="height: 100%; width: 100%;"
                                autoplay
                            ></mux-player>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/@mux/mux-player"></script>
{% endblock %} 