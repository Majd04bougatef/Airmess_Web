{% block body %}
    

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>social_media</h6>
                    </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">

                     <div id="map" style="height: 500px;"></div>
                      <script>
                          mapboxgl.accessToken = 'sk.eyJ1IjoibW1tMDQiLCJhIjoiY204ejNwN2oxMDZzbjJqc2E3YWgxNnZlaiJ9.SMQ_PIIkMBK82mch7Y1RjA';
                          var map = new mapboxgl.Map({
                              container: 'map',
                              style: 'mapbox://styles/mapbox/streets-v11',
                              center: [2.3522, 48.8566],
                              zoom: 13
                          });
                      </script>

                        <section class="get-in-touch">
                            <h1 class="title">Ajouter une publication/h1>
                                {{ form_start(form, {'method': 'POST', 'action': path('app_social_media_new'), 'attr': {'class': 'contact-form row'}}) }}
                                <div class="row">
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.nom, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.capacite, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.nombreVelo, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.typeVelo, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.prixHeure, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.pays, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.longitude, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    <div class="form-field col-lg-6">
                                        {{ form_row(form.latitude, {'attr': {'class': 'input-text'}}) }}
                                    </div>
                                    
                                    <div class="form-field col-lg-12 text-center">
                                        <button class="submit-btn">{{ button_label|default('Ajouter') }}</button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </section>

                    </div>
                </div>
            </div>
        </div>
        <footer class="footer pt-3  ">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
