{% extends 'base.html.twig' %}

{% block title %}Stream Error{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Stream Error</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p>{{ error }}</p>
                    </div>
                    <a href="{{ path('live_start') }}" class="btn btn-primary">Try Again</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 