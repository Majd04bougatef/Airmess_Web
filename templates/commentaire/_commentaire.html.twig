<div class="comment-item mb-3">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="d-flex align-items-center">
                    {% if commentaire.user %}
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                {% if commentaire.user.imagesU %}
                                    <img src="{{ asset('uploads/users_images/' ~ commentaire.user.imagesU) }}"
                                         class="rounded-circle me-2" width="40" height="40" alt="User image">
                                {% else %}
                                    <img src="{{ asset('images/default-avatar.jpg') }}"
                                         class="rounded-circle me-2" width="40" height="40" alt="Default user image">
                                {% endif %}
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="fw-bold mb-1">{{ commentaire.user.name }} {% if commentaire.user.prenom %}{{ commentaire.user.prenom }}{% endif %}</div>
                                <div class="text-muted small mb-2">
                                    {{ commentaire.commentDate ? commentaire.commentDate|date('d/m/Y H:i') : '' }}
                                    
                                    {% if is_granted('EDIT', commentaire) %}
                                        <a href="{{ path('app_commentaire_edit', {id: commentaire.id}) }}" class="text-primary ms-2">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    {% endif %}
                                    
                                    {% if is_granted('DELETE', commentaire) %}
                                        <a href="{{ path('app_commentaire_delete', {id: commentaire.id}) }}" class="text-danger ms-2"
                                           data-confirm="Êtes-vous sûr de vouloir supprimer ce commentaire ?">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </a>
                                    {% endif %}
                                </div>
                                <div class="comment-content">
                                    {{ commentaire.content|raw }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <small class="text-muted">
                {{ commentaire.dateCommentaire|date('d/m/Y H:i') }}
            </small>
        </div>
    </div>
</div>
