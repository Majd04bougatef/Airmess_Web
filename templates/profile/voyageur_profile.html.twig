{% extends 'profile/profile.html.twig' %}

{% block sidebar_content %}
    <div class="mt-4">
        <div class="d-grid gap-2">
            <a href="{{ path('app_dashVoyageurs') }}" class="btn btn-sm btn-outline-primary mb-2">
                <i class="fas fa-tachometer-alt me-2"></i> Tableau de bord Voyageur
            </a>
            <a href="{{ path('user_expenses_page') }}" class="btn btn-sm btn-outline-warning mb-2">
                <i class="fas fa-receipt me-2"></i> Mes dépenses
            </a>
        </div>
        <div class="mt-3">
            <p class="text-center fw-bold">Nombre de diamants</p>
            <div class="d-flex justify-content-center">
                <div class="bg-light rounded-pill px-3 py-1">
                    <i class="fas fa-gem text-primary me-2"></i>
                    <span class="fw-bold">{{ user.diamond }}</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block main_content %}
    <div class="mt-4 pt-4 border-top">
        <h5>Mes informations de voyage</h5>
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Date d'inscription</th>
                        <td>{{ user.dateNaiss|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Statut du compte</th>
                        <td>
                            {% if user.statut == 'actif' %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-danger">Inactif</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Diamants accumulés</th>
                        <td>{{ user.diamond }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 