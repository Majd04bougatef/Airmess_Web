{% extends 'dashAdmin/dashboard.html.twig' %}

{% block title %}Statistiques d'activité des utilisateurs{% endblock %}

{% block content %}
<nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl " id="navbarBlur" data-scroll="false">
  <div class="container-fluid py-1 px-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="{{ path('dashboard_page') }}">Dashboard</a></li>
        <li class="breadcrumb-item text-sm text-white active" aria-current="page">Statistiques d'activité</li>
      </ol>
      <h6 class="font-weight-bolder text-white mb-0">Statistiques d'activité des utilisateurs</h6>
    </nav>
    <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
      <div class="ms-md-auto pe-md-3 d-flex align-items-center">
        <div class="input-group">
          <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
          <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un utilisateur...">
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="container-fluid py-4">
  <!-- Statistics Cards -->
  <div class="row">
    <div class="col-xl-4 col-sm-6 mb-4">
      <div class="card">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-8">
              <div class="numbers">
                <p class="text-sm mb-0 text-capitalize font-weight-bold">Utilisateurs aujourd'hui</p>
                <h5 class="font-weight-bolder mb-0">
                  {{ activeUsersToday|length }}
                </h5>
              </div>
            </div>
            <div class="col-4 text-end">
              <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                <i class="fas fa-user-clock text-lg opacity-10" aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-4">
      <div class="card">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-8">
              <div class="numbers">
                <p class="text-sm mb-0 text-capitalize font-weight-bold">Utilisateurs ce mois</p>
                <h5 class="font-weight-bolder mb-0">
                  {{ activeUsersThisMonth|length }}
                </h5>
              </div>
            </div>
            <div class="col-4 text-end">
              <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-4">
      <div class="card">
        <div class="card-body p-3">
          <div class="row">
            <div class="col-8">
              <div class="numbers">
                <p class="text-sm mb-0 text-capitalize font-weight-bold">Utilisateurs cette année</p>
                <h5 class="font-weight-bolder mb-0">
                  {{ activeUsersThisYear|length }}
                </h5>
              </div>
            </div>
            <div class="col-4 text-end">
              <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                <i class="fas fa-calendar-alt text-lg opacity-10" aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation tabs -->
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <ul class="nav nav-tabs" id="userActivityTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="today-tab" data-bs-toggle="tab" data-bs-target="#today" type="button" role="tab" aria-controls="today" aria-selected="true">
                Aujourd'hui <span class="badge bg-primary ms-1">{{ activeUsersToday|length }}</span>
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="month-tab" data-bs-toggle="tab" data-bs-target="#month" type="button" role="tab" aria-controls="month" aria-selected="false">
                Ce mois <span class="badge bg-success ms-1">{{ activeUsersThisMonth|length }}</span>
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="year-tab" data-bs-toggle="tab" data-bs-target="#year" type="button" role="tab" aria-controls="year" aria-selected="false">
                Cette année <span class="badge bg-warning ms-1">{{ activeUsersThisYear|length }}</span>
              </button>
            </li>
          </ul>
        </div>

        <div class="card-body px-0 pt-0 pb-2">
          <div class="tab-content" id="userActivityTabContent">
            <!-- Today's users tab -->
            <div class="tab-pane fade show active" id="today" role="tabpanel" aria-labelledby="today-tab">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="todayUsersTable">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Utilisateur</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rôle</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Dernière activité</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% if activeUsersToday|length > 0 %}
                      {% for user in activeUsersToday %}
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="{{ '/images_users/' ~ user.imagesU }}" class="avatar avatar-sm me-3" alt="user image" onerror="this.src='{{ asset('images/user-avatar.svg') }}'">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">{{ user.name }} {{ user.prenom }}</h6>
                                <p class="text-xs text-secondary mb-0">{{ user.email }}</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">{{ user.roleUser }}</p>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <p class="text-xs font-weight-bold mb-0">{{ user.lastActivity ? user.lastActivity|date('H:i:s d/m/Y') : 'N/A' }}</p>
                          </td>
                          <td class="align-middle text-center">
                            {% if user.isOnline %}
                              <span class="badge badge-sm bg-gradient-success">En ligne</span>
                            {% else %}
                              <span class="badge badge-sm bg-gradient-info">Actif aujourd'hui</span>
                            {% endif %}
                          </td>
                          <td class="align-middle">
                            <a href="{{ path('admin_user_edit', {'id_U': user.idU}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                              Voir profil
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    {% else %}
                      <tr>
                        <td colspan="5" class="text-center py-4">
                          <p class="text-secondary mb-0">Aucun utilisateur n'a été actif aujourd'hui</p>
                        </td>
                      </tr>
                    {% endif %}
                  </tbody>
                </table>
              </div>
            </div>

            <!-- This month users tab -->
            <div class="tab-pane fade" id="month" role="tabpanel" aria-labelledby="month-tab">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="monthUsersTable">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Utilisateur</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rôle</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Dernière activité</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% if activeUsersThisMonth|length > 0 %}
                      {% for user in activeUsersThisMonth %}
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="{{ '/images_users/' ~ user.imagesU }}" class="avatar avatar-sm me-3" alt="user image" onerror="this.src='{{ asset('images/user-avatar.svg') }}'">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">{{ user.name }} {{ user.prenom }}</h6>
                                <p class="text-xs text-secondary mb-0">{{ user.email }}</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">{{ user.roleUser }}</p>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <p class="text-xs font-weight-bold mb-0">{{ user.lastActivity ? user.lastActivity|date('H:i:s d/m/Y') : 'N/A' }}</p>
                          </td>
                          <td class="align-middle text-center">
                            {% set now = date() %}
                            {% set diff = date(now).diff(date(user.lastActivity)) %}
                            {% set hours = diff.h + (diff.days * 24) %}
                            
                            {% if user.isOnline %}
                              <span class="badge badge-sm bg-gradient-success">En ligne</span>
                            {% elseif hours < 24 %}
                              <span class="badge badge-sm bg-gradient-info">Actif aujourd'hui</span>
                            {% elseif hours < 168 %}
                              <span class="badge badge-sm bg-gradient-warning">Actif cette semaine</span>
                            {% else %}
                              <span class="badge badge-sm bg-gradient-secondary">Actif ce mois</span>
                            {% endif %}
                          </td>
                          <td class="align-middle">
                            <a href="{{ path('admin_user_edit', {'id_U': user.idU}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                              Voir profil
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    {% else %}
                      <tr>
                        <td colspan="5" class="text-center py-4">
                          <p class="text-secondary mb-0">Aucun utilisateur n'a été actif ce mois-ci</p>
                        </td>
                      </tr>
                    {% endif %}
                  </tbody>
                </table>
              </div>
            </div>

            <!-- This year users tab -->
            <div class="tab-pane fade" id="year" role="tabpanel" aria-labelledby="year-tab">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0" id="yearUsersTable">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Utilisateur</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rôle</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Dernière activité</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    {% if activeUsersThisYear|length > 0 %}
                      {% for user in activeUsersThisYear %}
                        <tr>
                          <td>
                            <div class="d-flex px-2 py-1">
                              <div>
                                <img src="{{ '/images_users/' ~ user.imagesU }}" class="avatar avatar-sm me-3" alt="user image" onerror="this.src='{{ asset('images/user-avatar.svg') }}'">
                              </div>
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm">{{ user.name }} {{ user.prenom }}</h6>
                                <p class="text-xs text-secondary mb-0">{{ user.email }}</p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <p class="text-xs font-weight-bold mb-0">{{ user.roleUser }}</p>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <p class="text-xs font-weight-bold mb-0">{{ user.lastActivity ? user.lastActivity|date('H:i:s d/m/Y') : 'N/A' }}</p>
                          </td>
                          <td class="align-middle text-center">
                            {% set now = date() %}
                            {% set diff = date(now).diff(date(user.lastActivity)) %}
                            {% set days = diff.days %}
                            
                            {% if user.isOnline %}
                              <span class="badge badge-sm bg-gradient-success">En ligne</span>
                            {% elseif days < 1 %}
                              <span class="badge badge-sm bg-gradient-info">Actif aujourd'hui</span>
                            {% elseif days < 7 %}
                              <span class="badge badge-sm bg-gradient-warning">Actif cette semaine</span>
                            {% elseif days < 31 %}
                              <span class="badge badge-sm bg-gradient-secondary">Actif ce mois</span>
                            {% else %}
                              <span class="badge badge-sm bg-gradient-light text-dark">Actif cette année</span>
                            {% endif %}
                          </td>
                          <td class="align-middle">
                            <a href="{{ path('admin_user_edit', {'id_U': user.idU}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                              Voir profil
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    {% else %}
                      <tr>
                        <td colspan="5" class="text-center py-4">
                          <p class="text-secondary mb-0">Aucun utilisateur n'a été actif cette année</p>
                        </td>
                      </tr>
                    {% endif %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="d-flex justify-content-end">
        <a href="{{ path('dashboard_page') }}" class="btn btn-primary">
          <i class="fas fa-arrow-left me-2"></i> Retour au tableau de bord
        </a>
      </div>
    </div>
  </div>
  
  <footer class="footer pt-3 mt-4">
    <div class="container-fluid">
      <div class="row align-items-center justify-content-lg-between">
        <div class="col-lg-6 mb-lg-0 mb-4">
          <div class="copyright text-center text-sm text-muted text-lg-start">
            © {{ "now"|date("Y") }} Airmess
          </div>
        </div>
      </div>
    </div>
  </footer>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Simple search functionality
  const searchInput = document.getElementById('searchInput');
  const tables = [
    document.getElementById('todayUsersTable'),
    document.getElementById('monthUsersTable'),
    document.getElementById('yearUsersTable')
  ];
  
  searchInput.addEventListener('keyup', function() {
    const searchText = searchInput.value.toLowerCase();
    
    tables.forEach(function(table) {
      if (table) {
        const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
        
        for (let i = 0; i < rows.length; i++) {
          const nameCell = rows[i].getElementsByTagName('td')[0];
          const roleCell = rows[i].getElementsByTagName('td')[1];
          
          if (nameCell && roleCell) {
            const name = nameCell.textContent || nameCell.innerText;
            const role = roleCell.textContent || roleCell.innerText;
            
            if (name.toLowerCase().indexOf(searchText) > -1 || 
                role.toLowerCase().indexOf(searchText) > -1) {
              rows[i].style.display = '';
            } else {
              rows[i].style.display = 'none';
            }
          }
        }
      }
    });
  });
});
</script>
{% endblock %} 