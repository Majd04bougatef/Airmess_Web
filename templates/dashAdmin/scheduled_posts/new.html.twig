{% extends 'dashAdmin/dashboard.html.twig' %}

{% block title %}Nouvelle Publication Planifiée{% endblock %}

{% block content %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Nouvelle Publication Planifiée</h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.lieu) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.contenu) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.publicationDate) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.imagemedia) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">Planifier la Publication</button>
                                <a href="{{ path('admin_scheduled_posts_index') }}" class="btn btn-secondary">Annuler</a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 