{% extends 'dashVoyageurs/dashboardVoyageurs.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Réserver une offre</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Offre sélectionnée : {{ offre.place }}</h5>
            <p class="card-text">
                <strong>Prix :</strong> {{ offre.priceAfter ? offre.priceAfter ~ ' €' : 'Non défini' }}<br>
            </p>
            <hr>
            <h5 class="mb-3">Informations de réservation</h5>
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.dateRes, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dateRes, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateRes) }}
                </div>
                <button type="submit" class="btn btn-success">Confirmer la réservation</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
