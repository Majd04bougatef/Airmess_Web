{% extends 'dashVoyageurs/dashboardVoyageurs.html.twig' %}

{% block title %}Confirmation de Réservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Confirmation de Réservation</h2>
    <div class="alert alert-success mt-3">
        <strong>Succès !</strong> Votre réservation a été confirmée avec succès.
    </div>
    <ul class="list-group mt-4">
        <li class="list-group-item">
            <strong>Référence :</strong> {{ reservation.idR }}
        </li>
        <li class="list-group-item">
            <strong>Offre :</strong> {{ reservation.offre.place }}
        </li>
        <li class="list-group-item">
            <strong>Date de réservation :</strong> {{ reservation.dateRes|date('d/m/Y à H:i') }}
        </li>
        <li class="list-group-item">
            <strong>Montant payé :</strong> {{ reservation.offre.priceAfter }} €
        </li>
    </ul>
    <div class="mt-4">
        <a href="{{ path('app_offre_voyageurs') }}" class="btn btn-primary">Retour aux offres</a>
    </div>
</div>
{% endblock %}