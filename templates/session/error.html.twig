{% extends 'base.html.twig' %}

{% block title %}Session Error{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .error-container {
        max-width: 600px;
        margin: 4rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        text-align: center;
    }
    .error-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }
    .error-message {
        color: #6c757d;
        margin-bottom: 2rem;
    }
    .btn-back {
        background: linear-gradient(to right, rgba(219,138,222,1) 0%, rgba(246,191,159,1) 100%);
        color: white;
        border: none;
        padding: 0.5rem 2rem;
        border-radius: 2rem;
        font-weight: bold;
    }
</style>
{% endblock %}

{% block body %}
<div class="error-container">
    <div class="error-icon">
        <i class="fas fa-exclamation-circle"></i>
    </div>
    <h1 class="mb-4">Session Error</h1>
    
    <div class="error-message">
        <p>{{ error_message|default('There was an error with your session.') }}</p>
        <p>This could be due to one of the following reasons:</p>
        <ul class="text-left">
            <li>Your browser has cookies disabled</li>
            <li>Your session has expired</li>
            <li>Server configuration issue with sessions</li>
        </ul>
    </div>
    
    <p>Try enabling cookies in your browser and refreshing the page.</p>
    
    <div class="mt-4">
        <a href="{{ path('login') }}" class="btn btn-back">Return to Login</a>
    </div>
</div>
{% endblock %} 