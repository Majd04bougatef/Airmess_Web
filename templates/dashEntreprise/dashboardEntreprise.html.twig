  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Mark the current page as active
      markActiveLink();
      
      // Profile button now uses direct link, no event handler needed
    });
    
    function markActiveLink() {
      // Get the current URL
      var currentUrl = window.location.pathname;
      
      // Find all navigation links (excluding forms)
      var navLinks = document.querySelectorAll('.nav-link:not(button)');
      
      // Loop through links and check if the href matches the current URL
      navLinks.forEach(function(link) {
        var linkUrl = link.getAttribute('href');
        
        // Check if the link has an href attribute and if the current URL contains the link URL
        if (linkUrl && currentUrl.includes(linkUrl) && linkUrl !== '#') {
          // Remove active class from all links
          navLinks.forEach(function(l) {
            l.classList.remove('active');
          });
          
          // Add active class to matching link
          link.classList.add('active');
          
          // Update breadcrumb if elements exist
          var breadcrumbItem = document.querySelector('.breadcrumb-item.active');
          var headerTitle = document.querySelector('.font-weight-bolder.text-white.mb-0');
          
          if (breadcrumbItem && link.querySelector('.nav-link-text')) {
            var pageName = link.querySelector('.nav-link-text').innerText;
            breadcrumbItem.innerText = pageName;
            if (headerTitle) headerTitle.innerText = pageName;
          }
        }
      });
      
      // Special case for profile page
      if (currentUrl.includes('/profile')) {
        document.querySelector('.breadcrumb-item.active').innerText = 'Profile';
        document.querySelector('.font-weight-bolder.text-white.mb-0').innerText = 'Profile';
      }
    }

    var win = navigator.platform.indexOf('Win') > -1;
