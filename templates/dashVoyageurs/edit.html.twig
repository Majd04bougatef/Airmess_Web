{% extends 'base.html.twig' %}

{% block title %}Modifier l'Offre{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <div class="sidebar">
            <nav>
                <ul>
                    <li><a href="{{ path('app_offre_index') }}">Offres</a></li>
                    <li><a href="{{ path('app_reservation_transport_index') }}">Mes Réservations</a></li>
                    <li><a href="{{ path('app_reservation_transport_station') }}">Stations</a></li>
                    <li><a href="{{ path('app_message_voyageurs') }}">Discussions</a></li>
                </ul>
            </nav>
        </div>

        <div class="main-content">
            <div class="header">
                <h1>Modifier l'Offre</h1>
            </div>

            <div class="form-container">
                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.place) }}
                        {{ form_widget(form.place, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.place) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.priceInit) }}
                        {{ form_widget(form.priceInit, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.priceInit) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.priceAfter) }}
                        {{ form_widget(form.priceAfter, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.priceAfter) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.startDate) }}
                        {{ form_widget(form.startDate, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.startDate) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.endDate) }}
                        {{ form_widget(form.endDate, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.endDate) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.imagePath) }}
                        {{ form_widget(form.imagePath, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.imagePath) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                {{ form_end(form) }}

                <a href="{{ path('app_offre_index') }}" class="btn btn-secondary">Retour à la liste</a>

                {{ include('offre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}
