{% extends 'base.html.twig' %}

{% block title %}Modifier l'Offre{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
    <style>
        /* Reset all margins and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }
        
        .navbar {
            display: flex;
            background: #ffffff;
            padding: 10px;
            justify-content: center;
            margin: 20px auto 0;
            gap: 20px;
            width: 90%;
            max-width: 1200px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .navbar a {
            color: black;
            text-decoration: none;
            padding: 10px 15px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .navbar .nav-link:hover {
            color: #6c99bc;
            border-bottom: 2px solid #6c99bc;
        }
        
        .content {
            padding: 20px;
            text-align: center;
            margin: 0 auto;
            width: 90%;
            max-width: 1200px;
        }

        .form-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            text-align: left;
        }

        .form-container h1 {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .form-group button:hover {
            background-color: #0056b3;
        }

        .btn-back {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Menu Horizontal -->
    <div class="navbar">
        <a class="nav-link" href="{{ path('app_offre_index') }}">Offres</a>
        <a class="nav-link" href="{{ path('app_reservation_transport_index') }}">Mes Réservations</a>
        <a class="nav-link" href="{{ path('app_reservation_transport_station') }}">Stations</a>
        <a class="nav-link" href="{{ path('app_message_voyageurs') }}">Discussions</a>
    </div>
    
    <!-- Contenu Dynamique -->
    <div class="content">
        <div class="form-container">
            <h1>Modifier l'Offre</h1>

            {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.place) }}
                    {{ form_widget(form.place) }}
                    {{ form_errors(form.place) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.priceInit) }}
                    {{ form_widget(form.priceInit) }}
                    {{ form_errors(form.priceInit) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.priceAfter) }}
                    {{ form_widget(form.priceAfter) }}
                    {{ form_errors(form.priceAfter) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.startDate) }}
                    {{ form_widget(form.startDate) }}
                    {{ form_errors(form.startDate) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.endDate) }}
                    {{ form_widget(form.endDate) }}
                    {{ form_errors(form.endDate) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.imagePath) }}
                    {{ form_widget(form.imagePath) }}
                    {{ form_errors(form.imagePath) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.aidesc) }}
                    {{ form_widget(form.aidesc) }}
                    {{ form_errors(form.aidesc) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.numberLimit) }}
                    {{ form_widget(form.numberLimit) }}
                    {{ form_errors(form.numberLimit) }}
                </div>

                <button type="submit">Enregistrer les modifications</button>
            {{ form_end(form) }}

            <a href="{{ path('app_offre_index') }}" class="btn-back">Retour à la liste</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/dashboard.js') }}"></script>
{% endblock %}
