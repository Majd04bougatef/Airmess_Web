<script>
// Fonction d'initialisation
function initializeDropdown() {
    // Sélectionner les éléments avec les nouvelles classes
    var filterBtn = document.querySelector('.filter-dropdown');
    var dropdownMenu = document.querySelector('.custom-dropdown-menu');
    
    if (filterBtn && dropdownMenu) {
        // Gestionnaire pour le bouton
        filterBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            // Toggle du menu personnalisé
            var isVisible = dropdownMenu.style.display === 'block';
            dropdownMenu.style.display = isVisible ? 'none' : 'block';
        });
        
        // Gestionnaire pour les options
        var options = dropdownMenu.querySelectorAll('.filter-option');
        options.forEach(function(option) {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                var filter = this.getAttribute('data-filter');
                
                // Mise à jour du bouton
                filterBtn.innerHTML = '<i class="fas fa-filter"></i> ' + this.textContent.trim();
                
                // Récupérer toutes les cartes
                var cards = document.querySelectorAll('.col-12.col-md-6.col-lg-4');
                
                // Appliquer le filtre
                cards.forEach(function(card) {
                    var ratingText = card.querySelector('.rating-text');
                    if (!ratingText) return;
                    
                    var rating = parseFloat(ratingText.textContent);
                    var reviewCount = parseInt(ratingText.querySelector('small').textContent.match(/\d+/)[0]);
                    
                    switch(filter) {
                        case 'all':
                            card.style.display = 'block';
                            break;
                        case 'rating-5':
                            card.style.display = rating === 5 ? 'block' : 'none';
                            break;
                        case 'rating-4':
                            card.style.display = rating >= 4 ? 'block' : 'none';
                            break;
                        case 'rating-3':
                            card.style.display = rating >= 3 ? 'block' : 'none';
                            break;
                        case 'most-reviewed':
                            card.style.display = 'block';
                            break;
                    }
                });
                
                // Tri spécial pour "Plus d'avis"
                if (filter === 'most-reviewed') {
                    var container = document.querySelector('.row.g-3');
                    var cardsArray = Array.from(cards);
                    cardsArray.sort(function(a, b) {
                        var aReviews = parseInt(a.querySelector('.rating-text small').textContent.match(/\d+/)[0]);
                        var bReviews = parseInt(b.querySelector('.rating-text small').textContent.match(/\d+/)[0]);
                        return bReviews - aReviews;
                    });
                    cardsArray.forEach(function(card) {
                        container.appendChild(card);
                    });
                }
                
                // Fermer le menu
                dropdownMenu.style.display = 'none';
            });
        });
        
        // Fermer le menu en cliquant ailleurs
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.custom-dropdown')) {
                dropdownMenu.style.display = 'none';
            }
        });
    }
}

// Attendre que le DOM soit chargé
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeDropdown);
} else {
    initializeDropdown();
}
</script>
