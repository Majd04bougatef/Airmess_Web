<form method="post" action="{{ path('app_expense_delete', {'idE': expense.idE}) }}" onsubmit="return confirm('Are you sure you want to delete this expense? This action cannot be undone.');" class="delete-form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.idE) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> Delete
    </button>
</form>
