{% extends in_voyageurs_dashboard is defined and in_voyageurs_dashboard ? 'dashVoyageurs/dashboardVoyageurs.html.twig' : 'base.html.twig' %}

{% block title %}Edit Expense{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-edit me-2 text-primary"></i>Edit Expense
                    </h1>
                    <a href="{% if in_voyageurs_dashboard is defined and in_voyageurs_dashboard %}{{ path('userVoyageurs_page') }}{% else %}{{ path('app_expense_index') }}{% endif %}" 
                       class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to list
                    </a>
                </div>
                
                <div class="bg-light p-4 rounded-3 border shadow-sm mb-4">
                    <p class="text-muted">
                        <i class="fas fa-info-circle me-1"></i> Update the expense details below. All fields marked with * are required.
                        {% if expense.imagedepense and expense.imagedepense != 'default-receipt.jpg' %}
                            <br><i class="fas fa-image me-1 mt-2"></i> <strong>Note:</strong> Uploading a new receipt image is optional. If you don't upload a new image, your current receipt image will be kept.
                        {% endif %}
                    </p>
                </div>

                {{ include('expense/_form.html.twig', {'button_label': 'Update'}) }}

                <div class="mt-3">
                    {{ include('expense/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
