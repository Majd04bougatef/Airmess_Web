                                                <input type="text" class="form-control" name="name" placeholder="Last Name *" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="prenom" placeholder="First Name *" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control" name="email" placeholder="Email *" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" maxlength="10" minlength="10" name="phoneNumber" class="form-control" placeholder="Phone *" value="" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="date" class="form-control" name="dateNaiss" placeholder="Birth Date *" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
